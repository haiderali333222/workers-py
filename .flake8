[flake8]
# Ignoring specific errors that conflict with Black formatting rules:
# E203 - Whitespace before ':'
# W503 - Line break occurred before a binary operator
ignore =
    E203,
    W503

# Consistent with Black's default max line length
max-line-length = 200

# Excluding directories that do not require lint checks
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist

# Keeping complexity low to maintain code readability and reduce maintenance costs
max-complexity = 10

# Enforcing single quotes
inline-quotes = single
